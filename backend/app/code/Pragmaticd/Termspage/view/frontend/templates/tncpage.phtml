<script>
document.addEventListener('DOMContentLoaded', function() {
    var toggleButtons = document.querySelectorAll('.toggle-shark');
    toggleButtons.forEach(function(button) {
        button.addEventListener('click', function() {
            if (this.classList.contains('shark-up')) {
                this.classList.remove('shark-up');
                this.classList.add('shark-down');
            } else {
                this.classList.remove('shark-down');
                this.classList.add('shark-up');
            }
        });
    });
});
